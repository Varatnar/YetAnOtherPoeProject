{
    "name": "yet_an_other_poe_project",
    "version": "0.0.1",
    "description": "Poe Items and Mods Explorer",
    "author": "Varatnar",
    "license": "MIT",
    "private": true,
    "workspaces": {
        "packages": [
            "apps/*",
            "libs/*"
        ],
        "nohoist": [
            "**/@vue/cli-service"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "lerna": "^3.20.2",
        "lint-staged": "^10.0.4",
        "prettier": "^1.19.1"
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{html,scss,json}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,jsx,ts,tsx,vue}": [
            "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix",
            "git add"
        ]
    }
}
